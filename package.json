{
  "name": "trusted-cert2",
  "version": "2.0.2",
  "description": "A simple tool to generate self signed x509 certificate",
  "bin": {
    "trusted-cert": "./cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "release": "npm run clean && cross-env NODE_ENV=production rollup -c && npm publish",
    "release:next": "npm run clean && cross-env NODE_ENV=production rollup -c && npm publish --tag next",
    "prepublishOnly": "cross-env NODE_ENV=production npm run build",
    "madge": "npx madge --image ./source-file-deps-analysis.png src/index.ts"
  },
  "dependencies": {
    "commander": "^5.0.0",
    "debug": "^4.3.1",
    "fs-extra": "^9.0.0",
    "is-ip": "^3.1.0",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.11",
    "@types/node-forge": "^1.3.0",
    "cross-env": "^7.0.3",
    "tsup": "^6.5.0",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=10"
  },
  "author": {
    "name": "慧知",
    "email": "sprying.fang@qq.com",
    "url": "https://sprying.cnblogs.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/zhyupe/trusted-cert/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhyupe/trusted-cert"
  },
  "bugs": {
    "url": "https://github.com/zhyupe/trusted-cert/issues"
  },
  "tnpm": {
    "lockfile": "enable",
    "mode": "yarn"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  },
  "keywords": [
    "ssl",
    "openssl",
    "certificate",
    "trust",
    "https",
    "trust store",
    "x509",
    "certificates",
    "self-signed",
    "self-signing",
    "credential",
    "credentials",
    "keychain",
    "ca"
  ],
  "files": [
    "cli.js",
    "dist/*"
  ]
}
